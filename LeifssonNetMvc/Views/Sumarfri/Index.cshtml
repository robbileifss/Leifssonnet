
@{
    ViewBag.Title = "Dagar í spánarferð";
}
@{ 
    string dateString;
    if (DateTime.Now.Day < 10)
    {
        dateString = DateTime.Now.Date.ToString("d. MMMM yyyy");
    }
    else
    {
        dateString = DateTime.Now.Date.ToString("dd. MMMM yyyy");
    }
}

<div id="content" class="content">
    <p>Í dag er @dateString sem þýðir að það eru</p>
    <h1>@ViewBag.NumDays dagar</h1>
    <p>í sumarfríið okkar á spáni</p>
</div>